
<div class="container">
  <h1>Task</h1>
  <div id="edit_task_btn">
    <%= link_to "Edit this task", edit_task_path, {:class=>"edit_btn"} %>
  </div>

  <p style="background-color: lightgrey;"id="task_details"><%= @task.details %></p>

  <% if @task.completed == false %>
    <div class="task_info">
      <input type="checkbox" disabled="disabled">
      <p><%= "This task is not completed yet" %></p>
    </div>
    <% else %>
    <div class="task_info">
      <input type="checkbox" checked disabled="disabled">
      <p><%= "This task is completed" %></p>
    </div>
  <% end %>

  <hr>

  <img id="back" src="https://image.flaticon.com/icons/png/512/0/340.png">
  <%= link_to "Back to tasks list", tasks_path, {:class=>"back_tasks"} %>
</div>
